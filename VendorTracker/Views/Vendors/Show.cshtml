@{
  Layout = "_Layout";
}

@using VendorTracker.Models;

<h3>Here are all the orders for @Model["vendor"].Name:</h3>

<ol>
@foreach (Order order in @Model["orders"])   //Orders is a list of orders, of the order type.
{                                         //Model is the data we are passing into the view
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Description</a></li>
}
</ol>

<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to your vendors list</a></p>
<p><a href='/'>Back to Home Page</a></p>